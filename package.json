{
  "name": "kata",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest ./test",
    "smoke": "jest ./smoke-tests",
    "e2e": "detox build && detox test",
    "ios": "react-native run-ios --simulator='iPhone 8'",
    "all-tests": "yarn run test && yarn run smoke && yarn run e2e"
  },
  "dependencies": {
    "react": "16.3.1",
    "react-native": "0.55.4",
    "react-navigation": "^2.0.4"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-jest": "^23.0.1",
    "babel-preset-react-native": "^4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.0.0",
    "jest": "23.1.0",
    "jest-serializer-enzyme": "^1.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.4.0",
    "react-test-renderer": "16.3.1",
    "detox": "^7.3.7",
    "mocha": "^5.2.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./test/jestSetup.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/e2e/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|react-navigation|react-native-safe-area-view)/)"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/kata.app",
        "build": "xcodebuild -project ios/kata.xcodeproj -scheme kata -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
